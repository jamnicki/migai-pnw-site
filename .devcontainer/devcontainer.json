{
  "name": "Streamlit Template from dev container",
  "image": "ghcr.io/streamlit/basic-template:latest",
  "customizations": {
    "codespaces": {
      "openFiles": [
        "README.md",
        "streamlit_app.py"
      ]
    }
  },
  "postAttachCommand": {
    "server": "mkdir -p ~/.streamlit && echo -e '[theme]\nbase="light"' > ~/.streamlit/config.toml && streamlit run streamlit_app.py --server.enableCORS false --server.enableXsrfProtection false"
  },
  "portsAttributes": {
    "8501": {
      "label": "Application",
      "onAutoForward": "openPreview"
    }
  },
  "forwardPorts": [
    8501
  ]
}
